---
import type { HTMLAttributes } from "astro/types";
import { NETWORKS } from "./networks";
import LinkOut from "@components/links/LinkOut/LinkOut.astro";

interface Props extends HTMLAttributes<"article"> {}

const { class: cls } = Astro.props;
---

<article class:list={["network", cls]}>
  {
    NETWORKS.map(({ url, Icon, display }) => (
      <LinkOut title={display} href={url}>
        {<Icon />}
      </LinkOut>
    ))
  }
</article>

<style>
  .network {
    display: flex;
    gap: var(--lg);

    a {
      width: 32px;
      height: 32px;
      transition: transform ease 0.1s;
      color: inherit;

      &:hover {
        transform: scale(1.5);
      }

      svg {
        width: 100%;
        height: 100%;
      }
    }
  }
</style>
