---
import Network from "./Network/Network.astro";
---

<footer>
  <Network class={"network"} />
</footer>

<style>
  footer {
    display: grid;
    justify-items: center;
    gap: var(--lg);

    background: linear-gradient(45deg, var(--primary), var(--secondary));
    text-align: center;
    padding: var(--xl);

    .network {
      background-color: var(--bg-surf);
      padding: var(--lg);
      border-radius: var(--xl);
    }
  }
</style>
