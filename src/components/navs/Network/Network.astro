---
import css from "./Network.module.css";
import type { HTMLAttributes } from "astro/types";
import { NETWORKS } from "./networks";
import LinkOut from "@components/links/LinkOut/LinkOut.astro";

interface Props extends HTMLAttributes<"article"> {}

const { class: cls } = Astro.props;
---

<article class:list={[css.network, cls]}>
  {
    NETWORKS.map(({ url, Icon, display }) => (
      <LinkOut title={display} href={url}>
        {<Icon />}
      </LinkOut>
    ))
  }
</article>
