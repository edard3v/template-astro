---
import type { HTMLAttributes } from "astro/types";
import logo from "./notaku.png";

interface Props extends HTMLAttributes<"picture"> {}

const { class: cls, ...rest } = Astro.props;
---

<picture {...rest} class:list={["logo", cls]}>
  <img src={logo.src} alt="logo" />
</picture>

<style>
  .logo {
    max-width: 65px;
    overflow: hidden;
  }
</style>
